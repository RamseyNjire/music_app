<h1>Create A New Band</h1>

<form action="<%= bands_url %>" method="post" class="login_signup_form create_band_form">
    <%= auth_token %>
    <div class="input_field_holder">
        <label for="band_name">Name:</label>
        <input type="text" name="band[name]" id="band_name">
    </div>

    <input type="submit" value="Create" class="login_signup_button submit_band_form">
</form>