<div class="band_card">
    <%= render 'album', album: @album %>

    <a href="<%= edit_album_url(@album) %>" class="login_signup_button">Edit Album</a>
    <a href="<%= album_tracks_url(@album) %>" class="login_signup_button">View Album Tracks</a>
    <a href="<%= new_album_track_url(@album) %>" class="login_signup_button">New Track</a>
    <form action="<%= album_url(@album) %>" method="post">
        <%= auth_token %>
        <%= delete_method %>
        <input type="submit" value="Delete Album" class="login_signup_button delete_button">
    </form>
    <a href="<%= band_albums_url(@band) %>" class="login_signup_button">Back To Albums</a>
</div>